<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageAccount"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/task_manager"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/imageAccount"
        app:layout_constraintRight_toRightOf="@id/imageAccount"
        app:layout_constraintTop_toBottomOf="@id/imageAccount" />

    <TextView
        android:id="@+id/navigationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textColor="@color/cardview_light_background"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/nameAccount"
        app:layout_constraintRight_toRightOf="@id/nameAccount"
        app:layout_constraintTop_toBottomOf="@id/nameAccount" />

</androidx.constraintlayout.widget.ConstraintLayout>